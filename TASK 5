from scapy.all import sniff
from scapy.layers.inet import IP, TCP, UDP, ICMP

def packet_callback(packet):
    # Check if the packet has an IP layer
    if IP in packet:
        ip_src = packet[IP].src
        ip_dst = packet[IP].dst
        proto = packet[IP].proto
        
        protocol_name = ""
        if proto == 6:
            protocol_name = "TCP"
        elif proto == 17:
            protocol_name = "UDP"
        elif proto == 1:
            protocol_name = "ICMP"
        else:
            protocol_name = str(proto)

        print(f"[{protocol_name}] Source: {ip_src} -> Destination: {ip_dst}")
        
        # Optional: Print payload data (if TCP)
        if TCP in packet:
            payload = bytes(packet[TCP].payload)
            if len(payload) > 0:
                print(f"   Payload (first 20 bytes): {payload[:20]}")

# Main execution
print("Starting Packet Sniffer... (Press Ctrl+C to stop)")
# Sniffing 10 packets for demonstration. Remove count=10 to sniff indefinitely.
sniff(prn=packet_callback, store=0, count=10)
